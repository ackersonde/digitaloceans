{
   "ignition": { "version": "2.0.0" },
   "systemd": {
     "units": [
       {
         "name": "docker.service",
         "enable": true
       },
       {
         "name": "bbgames.service",
         "contents": "[Unit]\nDescription=Removes old ball games from /home/ackersond/bb_games/\n\n[Service]\nType=oneshot\nExecStart=/usr/bin/sh -c 'find /home/ackersond/bb_games/* -mtime +0 -exec rm {} \;'"
       }
     ]
   },
   "passwd": {
    "users": [{
      "name": "{{deploy_user}}",
      "passwordHash": "{{console_passwd_hash}}",
      "sshAuthorizedKeys": [ "{{circleci_deploy_pubkey}}", "{{login_ssh_pubkey}}" ],
      "create": {
        "groups": ["sudo", "docker"]
      }
    }]
  },
  "storage": {
    "files": [{
        "filesystem": "root",
        "path": "/etc/ssh/sshd_config",
        "contents": { "source": "data:text/plain;base64,{{encoded_sshd_config}}" }
    }]
  }
}
